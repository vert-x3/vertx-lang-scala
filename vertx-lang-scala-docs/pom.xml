  <build>
    <plugins>
      <plugin>
        <groupId>org.apache.maven.plugins</groupId>
        <artifactId>maven-antrun-plugin</artifactId>
        <version>1.8</version>
        <executions>
          <execution>
            <phase>package</phase>
            <goals>
              <goal>run</goal>
            </goals>
            <configuration>
              <tasks>

                <!-- Asciidoc -->
                <copy todir="target/docs" >
                  <fileset dir="../vertx-lang-scala">
                    <include name="src/main/asciidoc/scala/**"/>
                  </fileset>
                  <mapper type="regexp" from="^src/main/asciidoc/scala/(.*)" to="vertx-core/scala/\1"/>
                </copy>
                <copy todir="target/docs" >
                  <fileset dir="../vertx-lang-scala-stack">
                    <include name="vertx-*/src/main/asciidoc/scala/**"/>
                    <exclude name="vertx-config"/>
                    <exclude name="vertx-service-discovery"/>
                  </fileset>
                  <mapper type="regexp" from="^vertx-(.*)/src/main/asciidoc/scala/(.*)" to="vertx-\1/scala/\2"/>
                </copy>
                <copy todir="target/docs" >
                  <fileset dir="../vertx-lang-scala-stack/vertx-config">
                    <include name="vertx-*/src/main/asciidoc/scala/**"/>
                  </fileset>
                  <mapper type="regexp" from="^vertx-.*/src/main/asciidoc/scala/(.*)" to="vertx-config/scala/\1"/>
                </copy>
                <copy todir="target/docs" >
                  <fileset dir="../vertx-lang-scala-stack/vertx-service-discovery">
                    <include name="vertx-*/src/main/asciidoc/scala/**"/>
                  </fileset>
                  <mapper type="regexp" from="^vertx-.*/src/main/asciidoc/scala/(.*)" to="vertx-service-discovery/scala/\1"/>
                </copy>

                <!-- Sources -->
                <copy todir="target/sources" >
                  <fileset dir="../vertx-lang-scala">
                    <include name="src/main/scala/**"/>
                  </fileset>
                  <mapper type="regexp" from="^src/main/scala/(.*)" to="\1"/>
                </copy>
                <copy todir="target/sources" >
                  <fileset dir="../vertx-lang-scala-stack">
                    <include name="vertx-*/src/main/scala/**"/>
                  </fileset>
                  <mapper type="regexp" from="^vertx-.*/src/main/scala/(.*)" to="\1"/>
                </copy>
              </tasks>
            </configuration>
          </execution>
        </executions>
      </plugin>
      <plugin>
        <groupId>net.alchim31.maven</groupId>
        <artifactId>scala-maven-plugin</artifactId>
        <executions>
          <execution>
            <goals>
              <goal>doc</goal>
            </goals>
            <phase>package</phase>
            <configuration>
              <sourceDir>${project.build.directory}/sources</sourceDir>
              <reportOutputDirectory>${project.build.directory}</reportOutputDirectory>
              <outputDirectory>scaladocs</outputDirectory>
            </configuration>
          </execution>
        </executions>
      </plugin>
      <plugin>
        <artifactId>maven-assembly-plugin</artifactId>
        <version>3.0.0</version>
        <executions>
          <execution>
            <id>package-docs</id>
            <phase>package</phase>
            <goals>
              <goal>single</goal>
            </goals>
            <configuration>
              <descriptors>
                <descriptor>docs.xml</descriptor>
              </descriptors>
            </configuration>
          </execution>
        </executions>
      </plugin>
    </plugins>
